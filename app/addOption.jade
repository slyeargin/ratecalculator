div.addOption
  input(type='text', name='description', placeholder='Describe the rate option you wish to add.')
  label Add
  input(type='radio', name='addOrSubtract', value='increase', checked)
  label Subtract
  input(type='radio', name='addOrSubtract', value='decrease')
  input(type='number', name='amount', min='0')
  button#addOption Add Option
  
